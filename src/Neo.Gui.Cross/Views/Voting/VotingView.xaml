<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:votingVm="clr-namespace:Neo.Gui.Cross.ViewModels.Voting;assembly:Neo.Gui.Cross"
        xmlns:resources="clr-namespace:Neo.Gui.Cross.Resources;assembly:Neo.Gui.Cross"
        Icon="resm:Neo.Gui.Cross.Assets.logo.ico"
        Title="{x:Static resources:Strings.VotingTitle}"
        Width="600"
        Height="480"
        CanResize="False">

  <Design.DataContext>
    <votingVm:VotingViewModel/>
  </Design.DataContext>

  <Grid RowDefinitions="Auto,*,Auto" Margin="12">
    <TextBlock Grid.Row="0" Text="{Binding VoterAddress}" HorizontalContentAlignment="Center" FontSize="16" Margin="0 4" VerticalAlignment="Center" />

    <GroupBox Grid.Row="1" Header="{x:Static resources:Strings.Candidates}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
      <TextBox Text="{Binding Votes}" AcceptsReturn="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Visible" />
    </GroupBox>

    <DockPanel Grid.Row="2" HorizontalAlignment="Right" Margin="0 8 0 0">
      <Button Content="{x:Static resources:Strings.OK}" Width="60" Margin="0 0 8 0" Command="{Binding SubmitCommand}" />
      <Button Content="{x:Static resources:Strings.Cancel}" Width="60" Command="{Binding CancelCommand}" />
    </DockPanel>
  </Grid>

</Window>